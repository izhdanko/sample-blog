<h1><%= t("articles.edit") %></h1>

<%= form_for :article, url: article_path(@article), method: :put, data: { turbo: false } do |f| %>

	<div class="form-group mb-3">
		<%= f.label :title, style: 'display: block' %>
		<%= f.text_field :title, class: 'form-control form-control-lg' %>
	</div>

	<div class="form-group mb-3">
		<%= f.label :text, style: 'display: block' %>
		<%= f.text_area :text, class: 'form-control form-control-lg' %>
	</div>

	<div class="form-group mb-3">
		<%= f.submit class: 'btn btn-primary btn-lg' %>
	</div>	
		
<% end %>	