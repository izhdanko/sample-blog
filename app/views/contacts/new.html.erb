<h1><%= t("contacts.contact_us") %></h1>

<%= form_for :contact, url: contacts_path, data: { turbo: false } do |f| %>

	<% if @contact && @contact.errors.any? %>
	<p>
		<ul>
		<% @contact.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	 	</ul>
	</p>
	<% end %>

	<div class="form-group mb-3">
		<%= f.label :email, style: 'display: block' %>
		<%= f.text_field :email, class: 'form-control form-control-lg' %>
	</div>


	<div class="form-group mb-3">
		<%= f.label :message, style: 'display: block' %>
		<%= f.text_area :message, class: 'form-control form-control-lg' %>
	</div>

	<div class="form-group mb-3">
		<%= f.submit t("contacts.send_message"), class: 'btn btn-primary btn-lg' %>
	</div>	
		
<% end %>	